<Window x:Class="UniOnline.Moderador.WPF_Moderador_Perfil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniOnline.Moderador"
        mc:Ignorable="d"
        Title="WPF_Moderador_Perfil" Height="484.04" Width="900">
    <Window.Resources>

        <Style x:Key="TextBlockStyle" TargetType="{x:Type TextBlock}">

            <Setter Property="FontFamily" Value="Cambria"/>

        </Style>
        <Style x:Key="TextBoxStyle" TargetType="{x:Type TextBox}">

            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="IBeam"/>
            <Setter Property="FontFamily" Value="Cambria"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>

        </Style>

    </Window.Resources>
    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="87" Stroke="Black" VerticalAlignment="Top" Width="892" Fill="#FF010623"/>
        <TextBlock HorizontalAlignment="Left" Margin="12,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="189" Foreground="#FFF0F2F2" FontFamily="Segoe UI Emoji" FontSize="30" Text="CBRS de Chile"/>
        <Button x:Name="btnInicio" Content="Inicio" Margin="231,32,0,0" VerticalAlignment="Top" Width="51" HorizontalAlignment="Left" Background="#FF010623" Click="btnInicioMod" FontSize="16" Foreground="#FFF0F2F2" BorderBrush="#FF010623"/>
        <Button x:Name="btnPerfil" Content="Perfil Clientes" Margin="319,32,0,0" VerticalAlignment="Top" Width="100" HorizontalAlignment="Left" Background="#FF010623" Click="btnPerfilMod" FontSize="16" Foreground="#FFF0F2F2" BorderBrush="#FF010623"/>
        <Button x:Name="btnSoporte" Content="Soporte en Linea" Margin="451,32,0,0" VerticalAlignment="Top" Width="125" HorizontalAlignment="Left" Background="#FF010623" Click="btnSoporteMod" FontSize="16" Foreground="#FFF0F2F2" BorderBrush="#FF010623"/>
        <TextBlock FontFamily="Cambria" Text="Ingrese RUT de cliente." FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{DynamicResource TextBlockStyle}" Margin="126,120,522,303" Width="244"/>
        <TextBox x:Name="txtRutCliente" MaxLength="15" Style="{DynamicResource TextBoxStyle}" BorderThickness="2" Margin="375,120,273,303" BorderBrush="#FF747474"/>
        <Button x:Name="btnBuscar" Content="Buscar" Margin="624,120,146,0" VerticalAlignment="Top" Cursor="Hand" Click="btnBuscar_Click" Height="31"/>
        <DataGrid x:Name="datagridPerfil" HorizontalAlignment="Left" Height="263" Margin="12,167,0,0" VerticalAlignment="Top" Width="870" SelectionChanged="datagridPerfil_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="RUT Cliente" Width="Auto"/>
                <DataGridTextColumn Header="Primer Nombre" Width="Auto"/>
                <DataGridTextColumn Header="Segundo Nombre" Width="Auto"/>
                <DataGridTextColumn Header="Primer Apellido" Width="Auto"/>
                <DataGridTextColumn Header="Segundo Apellido" Width="Auto"/>
                <DataGridTextColumn Header="Correo Electronico" Width="Auto"/>
                <DataGridTextColumn Header="Telefono" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>





    </Grid>
</Window>
