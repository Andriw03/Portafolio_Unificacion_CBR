<Window x:Class="UniOnline.Trabajador.WPF_Trabajador_Prop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniOnline.Trabajador"
        mc:Ignorable="d"
        Title="CBR UniOnline" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="TabItemStyle" TargetType="TabItem">
            <Setter Property = "Background" Value="#010326"/>
            <Setter Property = "Foreground" Value="#F0F2F2"/>
            <Setter Property = "Margin" Value = "0,0,5,0 " />
            <Setter Property = "Width" Value = "100 "/>
            <Setter Property = "Padding" Value = "10,5"/>
            <Setter Property = "FontFamily" Value="Segoe UI Emoji"/>
        </Style>

        <Style x:Key="TabControlStyle" TargetType="TabControl">
            <Setter Property = "Background" Value="#010326"/>
        </Style>

    </Window.Resources>
    <Grid>
        <TabControl HorizontalAlignment="Center" Height="569" VerticalAlignment="Center" Width="892" Style="{DynamicResource TabControlStyle}">
            <TabItem Header="Agregar Propiedad" FontSize="20" Style="{DynamicResource TabItemStyle}" Width="Auto" HorizontalAlignment="Left">
                <Grid Background="#FFF0F2F2" Margin="0,0,0,-1">
                    <Button x:Name="btnVolverProp" Content="Volver" HorizontalAlignment="Left" Margin="801,492,0,0" VerticalAlignment="Top" Width="75" Click="btnVolverProp_Click" Background="#FF393E59" Foreground="#FFF0F2F2"/>
                    <TextBlock HorizontalAlignment="Left" Margin="308,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FF010326" Width="264" FontWeight="Bold" FontSize="25"><Run Text="Ingresa una Propiedad"/></TextBlock>
                    <Label Content="Nombre del t:" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" FontSize="15"/>
                    <TextBox x:Name="txtDueño" HorizontalAlignment="Left" Height="32" Margin="10,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" MaxLength="15"/>
                    <Button x:Name="btnBuscarDueño" Content="" HorizontalAlignment="Left" Margin="177,73,0,0" VerticalAlignment="Top" Width="32" Height="32" Click="btnBuscarDueño_Click" Background="#FF393E59"/>
                    <Button x:Name="btnAgregarDuenno" Content="Agregar dueño" HorizontalAlignment="Left" Margin="223,73,0,0" VerticalAlignment="Top" Width="138" Height="32" Background="#FF393E59" Foreground="#FFF0F2F2" Click="btnAgregarDuenno_Click"/>
                    <Label Content="Rut Dueño:" HorizontalAlignment="Left" Margin="10,105,0,0" VerticalAlignment="Top" FontSize="15"/>
                    <TextBox x:Name="txtRutDueño" HorizontalAlignment="Left" Height="32" Margin="10,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199" MaxLength="15" IsEnabled="False" IsUndoEnabled="False"/>
                    <TextBox x:Name="txtNombreDueño" HorizontalAlignment="Left" Height="32" Margin="223,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" MaxLength="15" IsEnabled="False" IsUndoEnabled="False"/>
                    <Label Content="Nombre Dueño:" HorizontalAlignment="Left" Margin="223,105,0,0" VerticalAlignment="Top" FontSize="15"/>
                    <ComboBox x:Name="cmbTipoProp" Margin="10,193,677,304" FontSize="15" IsEditable="True" Text="Seleccione" IsReadOnly="True" Focusable="False" SelectionChanged="cmbTipoProp_SelectionChanged" Grid.Row="1"/>
                    <Label Content="Tipos de propiedad:" HorizontalAlignment="Left" Margin="10,165,0,0" VerticalAlignment="Top" FontSize="15"/>
                    <Label Content="Foja:" HorizontalAlignment="Left" Margin="223,165,0,0" VerticalAlignment="Top" FontSize="15"/>
                    <TextBox x:Name="txtFoja" HorizontalAlignment="Left" Height="32" Margin="223,193,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199" />
                    <TextBox x:Name="txtNumero" HorizontalAlignment="Left" Height="32" Margin="436,193,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198" />
                    <Label Content="Número:" HorizontalAlignment="Left" Margin="436,165,0,0" VerticalAlignment="Top" FontSize="15"/>
                    <TextBox x:Name="txtAnno" HorizontalAlignment="Left" Height="32" Margin="648,193,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198" />
                    <Label Content="Año" HorizontalAlignment="Left" Margin="648,165,0,0" VerticalAlignment="Top" FontSize="15"/>
                    <Label Content="Razón Social:" HorizontalAlignment="Left" Margin="10,225,0,0" VerticalAlignment="Top" FontSize="15"/>
                    <TextBox x:Name="txtRazonSocial" HorizontalAlignment="Left" Height="32" Margin="10,253,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="412" IsEnabled="False" />
                    <Label Content="Rut Empresa:" HorizontalAlignment="Left" Margin="436,225,0,0" VerticalAlignment="Top" FontSize="15"/>
                    <TextBox x:Name="txtRutEmpresa" HorizontalAlignment="Left" Height="32" Margin="436,253,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198" MaxLength="15" IsEnabled="False"/>
                    <Label Content="Descripción:" HorizontalAlignment="Left" Margin="10,285,0,0" VerticalAlignment="Top" FontSize="15"/>
                    <TextBox x:Name="txtDescripcion" HorizontalAlignment="Left" Height="32" Margin="10,313,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="836" />
                    <Label Content="Región" HorizontalAlignment="Left" Margin="10,345,0,0" VerticalAlignment="Top" FontSize="15"/>
                    <ComboBox x:Name="cmbRegion" Margin="10,373,677,124" FontSize="15" IsEditable="True" Text="Seleccione" IsReadOnly="True" Focusable="False" SelectionChanged="cmbRegion_SelectionChanged"/>
                    <Label Content="Provincia" HorizontalAlignment="Left" Margin="223,345,0,0" VerticalAlignment="Top" FontSize="15"/>
                    <ComboBox x:Name="cmbProvincia" Margin="223,373,464,124" FontSize="15" IsEditable="True" Text="Seleccione" IsReadOnly="True" Focusable="False" SelectionChanged="cmbProvincia_SelectionChanged"/>
                    <Label Content="Comuna" HorizontalAlignment="Left" Margin="436,345,0,0" VerticalAlignment="Top" FontSize="15"/>
                    <ComboBox x:Name="cmbComuna" Margin="436,373,251,124" FontSize="15" IsEditable="True" Text="Seleccione" IsReadOnly="True" Focusable="False" SelectionChanged="cmbComuna_SelectionChanged"/>
                    <Label Content="Dirección" HorizontalAlignment="Left" Margin="10,405,0,0" VerticalAlignment="Top" FontSize="15"/>
                    <TextBox x:Name="txtDireccion" HorizontalAlignment="Left" Height="32" Margin="10,433,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="836" />
                    <Button x:Name="btnGuardar"  Content="Guardar" HorizontalAlignment="Left" Margin="10,492,0,0" VerticalAlignment="Top" Width="81" Background="#FF393E59" Foreground="#FFF0F2F2" Click="btnGuardar_Click"/>
                </Grid>
            </TabItem>

            <TabItem Header="Listar Propiedades" FontSize="20" Style="{DynamicResource TabItemStyle}" Width="Auto" HorizontalAlignment="Center">
                <Grid Background="#FFF0F2F2">

                    <!-- Start Column and Row Definition-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <!--End Column and Row Definition-->

                    <Label Content="Buscar por Foja:" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtFojaListar" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="32" TextWrapping="Wrap" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="212" MaxLength="15" PreviewTextInput="txtFojaListar_PreviewTextInput"/>
                    <Button x:Name="btnBuscar" Grid.Column="4" Grid.Row="3" Grid.ColumnSpan="2" Height="30" Width="100" Click="btnBuscar_Click" Background="#FF393E59" Foreground="#FFF0F2F2">
                        <TextBlock Text="Buscar" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>
                    <Button x:Name="btnLimpiar" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" Height="30" Width="100" Click="btnLimpiar_Click" Background="#FF393E59" Foreground="#FFF0F2F2">
                        <TextBlock Text="Limpiar" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>
                    <Label Content="Buscar por Número:" Grid.Column="4" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtNumListar" Grid.Column="4" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="32" TextWrapping="Wrap" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="212" MaxLength="15" PreviewTextInput="txtNumListar_PreviewTextInput"/>
                    <Label Content="Buscar por Año:" Grid.Column="7" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtAnnoListar" Grid.Column="7" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="32" TextWrapping="Wrap" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="212" MaxLength="15" PreviewTextInput="txtAnnoListar_PreviewTextInput"/>
                    <DataGrid x:Name="dtgPropiedad" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="8" Grid.RowSpan="5"/>

                    <Button x:Name="btnVolverProp2" Content="Volver" Grid.Column="8" Grid.Row="9" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="75" Click="btnVolverProp_Click" Background="#FF393E59" Foreground="#FFF0F2F2"/>

                </Grid>

            </TabItem>

        </TabControl>
    </Grid>
</Window>
